{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "types": ["node"],
    "sourceMap": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/node_modules/**"],
  "ts-node": {
      "files": true
  },
  "files": ["types.d.ts"]
}