{
  "name": "mfe-mono-starter",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "remove:modules": "yarn workspaces exec ls -l ",
    "lint:container": "yarn workspace @mfe-starter/container run lint",
    "start:container": "yarn workspace @mfe-starter/container run start",
    "start:child1": "yarn workspace @mfe-starter/child1 run start",
    "start": "yarn workspaces run start",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "projects": ["<rootDir>/packages/*"]
  }
}
