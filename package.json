{
  "name": "tsmfe-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Project to experiment with microfrontends using Webpack Module Federation and TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clear:node_modules": "wsrun exec rm -- -rf node_modules && rm -rf node_modules",
    "start": "wsrun --exclude-missing start",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "aws-cdk-lib": "^2.3.0",
    "constructs": "^10.0.19",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "wsrun": "^5.2.4"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  }
}
